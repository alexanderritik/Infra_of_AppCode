apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: AppCode
  namespace: argocd-appCode
spec:
  project: default

  source:
    repoURL: https://github.com/alexanderritik/Infra_of_AppCode.git
    targetRevision: HEAD
  destination: 
    server: https://kubernetes.default.svc
    namespace: appCode

  syncPolicy:
    syncOptions:
    - CreateNamespace=true

    automated:
      selfHeal: true
      prune: true
